{{if eq .Framework "express"}}import express from 'express';
import process from 'node:process';

const app = express();
app.use(express.json());
app.get('/health', (req, res) => res.json({ status: 'ok', architecture: '{{.Architecture}}' }));
app.get('/api/v1/items', (req, res) => res.json([{ id: 1, name: 'sample' }]));

const server = app.listen(process.env.PORT || {{.Port}}, () =>
  console.log(`[{{.Service}}] listening on :${process.env.PORT || {{.Port}}}`)
);

function shutdown() {
  console.log('[{{.Service}}] graceful shutdown — draining...');
  server.close(() => {
    console.log('[{{.Service}}] server stopped');
    process.exit(0);
  });
  setTimeout(() => process.exit(1), 10000);
}
process.on('SIGTERM', shutdown);
process.on('SIGINT', shutdown);
{{else}}import Fastify from 'fastify';
import process from 'node:process';

const app = Fastify({ logger: true });
app.get('/health', async () => ({ status: 'ok', architecture: '{{.Architecture}}' }));
app.get('/api/v1/items', async () => ([{ id: 1, name: 'sample' }]));

const start = async () => {
  await app.listen({ port: Number(process.env.PORT || {{.Port}}), host: '0.0.0.0' });
  console.log(`[{{.Service}}] listening on :${process.env.PORT || {{.Port}}}`);
};

async function shutdown() {
  console.log('[{{.Service}}] graceful shutdown — draining...');
  await app.close();
  console.log('[{{.Service}}] server stopped');
  process.exit(0);
}
process.on('SIGTERM', shutdown);
process.on('SIGINT', shutdown);
start();
{{end}}